# Database (Render provides DATABASE_URL in production)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Django
SECRET_KEY=change-me
DEBUG=False
ALLOWED_HOSTS=epetcare.onrender.com

# Email - pick one: HTTP provider (SendGrid/Resend) OR SMTP
# Example: SendGrid
EMAIL_HTTP_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
# If using SendGrid and your From is a public mailbox (gmail), set a SendGrid-verified sender
#SENDGRID_FROM_EMAIL=no-reply@yourdomain.com

# Example: SMTP (comment out EMAIL_HTTP_PROVIDER to use SMTP)
#EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
#EMAIL_HOST=smtp.gmail.com
#EMAIL_PORT=587
#EMAIL_HOST_USER=your@gmail.com
#EMAIL_HOST_PASSWORD=your-app-password
#EMAIL_USE_TLS=True

# From / branding
EMAIL_FROM_ADDRESS=no-reply@yourdomain.com
EMAIL_FROM_NAME="ePetCare"
DEFAULT_FROM_EMAIL="ePetCare <no-reply@yourdomain.com>"
BRAND_NAME="ePetCare"
EMAIL_BRAND_LOGO_URL="https://epetcare.onrender.com/static/clinic/images/epetcare-logo.png"

# Other
EMAIL_TIMEOUT=15

# Render-specific flags
RENDER=true

