# ePetCare Environment Variables Example
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
RENDER=false

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Email Configuration via Brevo HTTP API
EMAIL_HTTP_PROVIDER=brevo
BREVO_API_KEY=your-brevo-api-key-here
DEFAULT_FROM_EMAIL=your-email@example.com
SERVER_EMAIL=your-email@example.com
EMAIL_TIMEOUT=30
BRAND_NAME=ePetCare
EMAIL_BRAND_LOGO_URL=https://your-domain.com/static/clinic/images/epetcare-logo.png

# Brevo SMTP (alternative for local development)
EMAIL_HOST_USER=your-smtp-user@smtp-brevo.com
EMAIL_HOST_PASSWORD=your-smtp-password-here
